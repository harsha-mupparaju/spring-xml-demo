<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--property based object injection-->


    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="Ayushmann Khurana"></constructor-arg>
        <constructor-arg name="actorGender" value="Male"></constructor-arg>
        <constructor-arg name="actorAge" value="35"></constructor-arg>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="Ranveer Singh"></constructor-arg>
        <constructor-arg name="actorGender" value="Male"></constructor-arg>
        <constructor-arg name="actorAge" value="32"></constructor-arg>
    </bean>

    <bean  id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="Deepika Padukone"></constructor-arg>
        <constructor-arg name="actorGender" value="Female"></constructor-arg>
        <constructor-arg name="actorAge" value="31"></constructor-arg>
    </bean>

<!--autowire with by Name-->

  <bean autowire="byName" name="movie1" class="com.stackroute.domain.Movie" scope="prototype">
       <constructor-arg  name="actor" ref="actor1"></constructor-arg >
    </bean>
    <bean autowire="byName" name="movie2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>
    <bean autowire="byName" name="movie3" class="com.stackroute.domain.Movie" scope="prototype">
       <constructor-arg name="actor" ref="actor3"></constructor-arg>
    </bean>
    <bean autowire="byName" name="movie4" class="com.stackroute.domain.Movie" scope="prototype">
   <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>

